SRC	= $(OBJ_MOD:.o=.f) $(OBJS:.o=.f) $(OBJS_CC:.o=.c)
#
# *****************************************************************
#

$(LIB): $(OBJ_MOD) $(OBJS) $(OBJS_CC) 
	ar $(ARFLAGS) -ruv $(LIB) $(OBJ_MOD) $(OBJS) $(OBJS_CC)

clean:
	rm -f $(OBJ_MOD) $(OBJS) $(OBJS_CC) *.mod *.a

.F.o:
	$(F77) $(FFLAGS) -c -d $< 
.f.o:
	$(F77) $(FFLAGS) -c $< 
.c.o:
	$(CC) $(CFLAGS) $(DEFS) -c $< 
